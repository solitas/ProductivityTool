<mah:MetroWindow x:Class="Timer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Timer"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:reactiveUi="http://reactiveui.net"
        mc:Ignorable="d"
        GlowBrush="{DynamicResource AccentColorBrush}"
        BorderThickness="1"
        Title="MainWindow" Height="450" Width="400" FontFamily="{DynamicResource MaterialDesignFont}">
    <Grid>
        <reactiveUi:ViewModelViewHost x:Name="ViewHost" ViewModel="{Binding}"></reactiveUi:ViewModelViewHost>
    </Grid>
</mah:MetroWindow>

<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:tb="http://www.hardcodet.net/taskbar"
                    xmlns:viewMode="clr-namespace:ProductivityTool.Notify.ViewModel"
                    xmlns:model="clr-namespace:ProductivityTool.Notify.Model">

    <ContextMenu x:Shared="false" x:Key="SysTrayMenu" ItemsSource="{Binding Applications}">
        <ContextMenu.ItemContainerStyle>
            <Style TargetType="{x:Type MenuItem}">
                <Setter Property="Command" Value="{Binding Command}" />
                <Setter Property="Icon" Value="{Binding Icon}"></Setter>
            </Style>
        </ContextMenu.ItemContainerStyle>
        <ContextMenu.ItemTemplate>
            <HierarchicalDataTemplate DataType="{x:Type model:MatchedApplication}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding Header}" Margin="5"/>
                </StackPanel>
            </HierarchicalDataTemplate>
        </ContextMenu.ItemTemplate>
    </ContextMenu>
    
    <tb:TaskbarIcon x:Key="NotifyIcon"
                    IconSource="../app.ico"
                    ToolTipText="Notify"
                    ContextMenu="{StaticResource SysTrayMenu}">

        <!-- self-assign a data context (could also be done programmatically) -->
        <tb:TaskbarIcon.DataContext>
            <viewMode:NotifyIconViewModel/>
        </tb:TaskbarIcon.DataContext>
    </tb:TaskbarIcon>
</ResourceDictionary>